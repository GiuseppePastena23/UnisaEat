<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp" parent="Theme.Material3.Light">

        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="elevation">4dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="RoundedCard" parent="Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clipToPadding">true</item>
    </style>


</resources>