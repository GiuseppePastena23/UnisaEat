<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User Info Section -->
    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/user_surname_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surname: "
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/user_cf_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CF: "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/user_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/user_credit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credit: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.00"
            android:textColor="#FF5722"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Payment Buttons -->
    <Button
        android:id="@+id/make_payment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Payment"/>

    <Button
        android:id="@+id/cancel_payment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Payment"
        android:layout_marginBottom="16dp"/>

    <!-- Meal Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Meal:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/complete_meal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete Meal"/>

    <Button
        android:id="@+id/pizza_meal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Meal"/>

    <Button
        android:id="@+id/salad_meal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salad Meal"/>

    <Button
        android:id="@+id/basket_meal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basket Meal" />

    <Button
        android:id="@+id/reduced_meal_a_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reduced Meal A"/>

    <Button
        android:id="@+id/reduced_meal_b_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reduced Meal B"/>

    <!-- List of Added Products -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Added Products:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"/>

    <!-- Amount Section -->


</LinearLayout>
