<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- User Info Button -->
    <Button
        android:id="@+id/user_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:layout_marginBottom="16dp" />

    <!-- Language Selection Spinner -->
    <Spinner
        android:id="@+id/language_selection_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Save User Information CheckBox -->
    <CheckBox
        android:id="@+id/save_user_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save User Information"
        android:layout_marginBottom="16dp" />

    <!-- Biometric Authentication CheckBox -->
    <CheckBox
        android:id="@+id/biometric_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Biometric Authentication"
        android:layout_marginBottom="16dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout" />

</LinearLayout>
